<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tlm.security.rbac.mapper.UserMapper">
    <resultMap id="UserWithRoleMap" type="User">
        <result column="id" property="id" javaType="long" jdbcType="INTEGER"/>
        <result column="username" property="username" javaType="String" jdbcType="VARCHAR"/>
        <result column="password" property="password" javaType="String" jdbcType="VARCHAR"/>
        <result column="real_name" property="realName" javaType="String" jdbcType="VARCHAR"/>
        <result column="mobile" property="mobile" javaType="String" jdbcType="VARCHAR"/>
        <result column="enable" property="enable" javaType="int" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" javaType="java.util.Date" jdbcType="DATE"/>
        <collection property="authorities"  ofType="com.tlm.security.rbac.entity.Role">
            <result column="id" property="id" javaType="long" jdbcType="INTEGER"/>
            <result column="role_code" property="roleCode" javaType="String" jdbcType="VARCHAR"/>
            <result column="role_name" property="roleName" javaType="String" jdbcType="VARCHAR"/>
        </collection>
    </resultMap>


    <select id="loadUserByUsername" parameterType="User" resultMap="UserWithRoleMap">
        SELECT *
        FROM `user` u
                 LEFT JOIN user_role ur ON u.id = ur.user_id
                 LEFT JOIN role r ON ur.role_id = r.id
        where u.username = #{username}
    </select>

    <insert id="insertOne" parameterType="User">
        insert into user(username, password, real_name, mobile, enable, create_time)
        values (#{username},
                #{password},
                #{realName},
                #{mobile},
                #{enable},
                #{createTime})
    </insert>
</mapper>